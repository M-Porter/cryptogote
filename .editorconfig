; top-most EditorConfig file
root = true

[*]
nd_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
indent_style = space

[*.go]
indent_style = tab
indent_size = 4

[*.yml]
indent_size = 2

[*.md]
indent_size = 4
trim_trailing_whitespace = false
